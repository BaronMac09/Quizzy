@page "{id:int}"
@model Quizzy.Pages.Quizzes.TakeQuizModel

@{
    ViewData["Title"] = "Take Quiz";
}

<h1>@Model.Quiz.Title</h1>
<form method="post">
    <div class="card">
        <div class="card-body">
            @foreach (var assignment in Model.Quiz.Assignments)
            {
                <div class="mb-3">
                    <h5>@assignment.Question.Text</h5>
                    @foreach (var answer in assignment.Question.Answers)
                    {
                        <div class="form-check">
                            <input type="radio" name="UserAnswers[@assignment.QuestionId]" value="@answer" class="form-check-input"/>
                            <label class="form-check-label">@answer</label>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>