@page
@model Quizzy.Pages.Questions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>All Questions</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].Answers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].CorrectAnswer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].LastModified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].QuizIds)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Question) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CorrectAnswer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastModified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuizIds)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
