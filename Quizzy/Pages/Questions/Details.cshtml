@page
@model Quizzy.Pages.Questions.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Question Details</h1>

<div class="card shadow-lg">
    <div class="card-header bg-primary text-white">
        <h5>@Model.Question.Text</h5>
    </div>
    <div class="card-body">
        <p><strong>Answers:</strong></p>
        <ul class="list-group mb-3">
            @foreach (var answer in Model.Question.Answers)
            {
                <li class="list-group-item">@answer</li>
            }
        </ul>
        <p><strong>Correct Answer:</strong> <span class="text-success">@Model.Question.CorrectAnswer</span></p>
        <p><strong>Last Modified:</strong> <span class="text-muted">@Model.Question.LastModified</span></p>
        <p><strong>Quiz IDs:</strong> <span class="text-secondary">@string.Join(", ", Model.Question.QuizIds)</span></p>
    </div>
    <div class="card-footer text-end">
        <a asp-page="./Edit" asp-route-id="@Model.Question.Id" class="btn btn-warning btn-sm">Edit</a>
        <a asp-page="./Index" class="btn btn-secondary btn-sm">Back to List</a>
    </div>
</div>
