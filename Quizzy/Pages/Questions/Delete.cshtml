@page
@model Quizzy.Pages.Questions.DeleteModel

@{
    ViewData["Title"] = "Delete Question";
}

<h1 class="text-danger">Delete Question</h1>
<p class="text-muted">Are you sure you want to delete this question? This action cannot be undone.</p>

<div class="card border-danger shadow-sm mb-4">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Question Details</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4 text-secondary">
                @Html.DisplayNameFor(model => model.Question.Text)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Question.Text)
            </dd>
            <dt class="col-sm-4 text-secondary">
                @Html.DisplayNameFor(model => model.Question.Answers)
            </dt>
            <dd class="col-sm-8">
                <ul class="list-unstyled">
                    @foreach (var answer in Model.Question.Answers)
                    {
                        <li>@answer</li>
                    }
                </ul>
            </dd>
            <dt class="col-sm-4 text-secondary">
                @Html.DisplayNameFor(model => model.Question.CorrectAnswer)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Question.CorrectAnswer)
            </dd>
            <dt class="col-sm-4 text-secondary">
                @Html.DisplayNameFor(model => model.Question.LastModified)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Question.LastModified)
            </dd>
            <dt class="col-sm-4 text-secondary">
                @Html.DisplayNameFor(model => model.Question.QuizIds)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Question.QuizIds)
            </dd>
        </dl>
    </div>
    <div class="card-footer d-flex justify-content-between">
        <form method="post" class="mb-0">
            <input type="hidden" asp-for="Question.Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
