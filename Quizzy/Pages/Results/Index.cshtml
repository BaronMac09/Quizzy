@page
@model Quizzy.Pages.Results.IndexModel

@{
    ViewData["Title"] = "Quiz Results";
}

<h1>All Quiz Results</h1>

<div class="container">
    <div class="row">
        @foreach (var attempt in Model.Attempts)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@Model.QuizTitles[attempt.QuizId]</h5>
                        <p class="card-text"><strong>Score:</strong> @attempt.Score%</p>
                        <p class="card-text"><strong>Date Taken:</strong> @attempt.DateTaken</p>
                        <a asp-page="./Details" asp-route-id="@attempt.AttemptId" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>